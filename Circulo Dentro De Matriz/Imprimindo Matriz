#include <stdio.h>
#include <math.h>
#define MAXL 100
#define MAXC 100
void circulo(int l, int c, int r, int x, int y, int xc, int yc, char matriz[MAXL][MAXC])//Salvar circulo em Matriz
{
    for (int x=0; x<=l; x++)
    {
        for (int y=0; y<=c; y++)
        {
            if ((pow(x - xc,2) + pow(y-yc,2)) <= pow(r,2))//Salvando em matriz
                matriz[x][y]='*';
            else
                matriz[x][y]=' ';
        }
    }
}

void imprimir(int l, int c, int x, int y, char matriz[MAXL][MAXC])//Imprimir matriz
{
     for (int x=0; x<=l; x++)
    {
        for (int y=0; y<=c; y++)
        {
            printf("%c", matriz[x][y]);
        }
        puts(" ");
    }
}

int main()
{
    int l, c, r, x, y, xc, yc;
    char matriz[MAXL][MAXC];
    printf("Formando um circulo: ");
    printf("\nInforme o valor da linha: ");
    scanf("%d", &l);
    printf("\nInforme o valor da coluna: ");
    scanf("%d", &c);
    printf("\nInforme o Centro X da funcao: ");
    scanf("%d", &xc);
    printf("\nInforme o Centro Y da funcao: ");
    scanf("%d", &yc);
    printf("\nInforme o valor do Raio: ");
    scanf("%d", &r);
    circulo(l, c, r, x, y, xc, yc, matriz);
    imprimir(l, c, x, y, matriz);
    return 0;
}
